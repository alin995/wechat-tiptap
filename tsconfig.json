{
	"compilerOptions": {
		"target": "esnext",
		"lib": [
			"dom", "dom.iterable", "esnext"
		],
		"allowJs": false,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@wechat-editor/*": ["src/pages/wechat-editor/*"]
		}
	},
	"include": [
		"next-env.d.ts", "**/*.ts", "**/*.tsx"
	],
	"exclude": [
		"node_modules"
	]
}
